{% extends 'base.html.twig' %}

{% block body %}
    <div class="gestion_user" >
        <h1>Liste des Participant</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Nom</th>
            <th scope="col">Mail</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in listParticipants %}


            <tr class="tr_participant">
                <td>{{ participant.id}}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.mail }}</td>

                <td>
                    {% if participant.actif == 1 %}
                 <div>
                     <button class="button1"><a href="{{ path('admin_desactiverParticipant',{'id': participant.id})}}" title="desactiver "><span>Désactiver</span></a></button> -
                     <button class="button1"><a href="{{ path('admin_admin_supprimerParticipant',{'id': participant.id})}}"title="supprimer "><span>Supprimer</span></a></button>
                 </div>
                    {% else %}
                        <div>
                            <button class="button1"><a href="{{ path('admin_reactiverParticipant',{'id': participant.id})}}" title="reactiver "><span>Réactiver</span></a></button> -
                            <button class="button1"><a href="{{ path('admin_admin_supprimerParticipant',{'id': participant.id})}}"title="supprimer "><span>Supprimer</span></a></button>
                        </div>

                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}


{% block title %}

{% endblock %}

