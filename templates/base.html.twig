<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>{% block title %}Sortir{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Zen+Dots&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <script   src="https://code.jquery.com/jquery-3.6.0.min.js"   integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="   crossorigin="anonymous"></script>
    <script src={{ asset('js/app.js') }}></script>

{% block extrastyles %}

{% endblock extrastyles %}

    <link rel="icon" href="{{ asset('img/logo.png')}}">
</head>
<body>
<header id="header">
    <div class="div_img"><a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.png') }}"></a></div>
    <div class="div_nav">{% include('nav/nav.html.twig') %}</div>
    <div class="div_info">
       Date du jour : {{ "now"|date("d/m/Y") }}<br>
            {% if app.user %}
                Participant : {{ app.user.pseudo }}
            {% endif %}
    </div>
</header>

{# read and display all flash message #}
{%  for label, messages in app.flashes%}
    {% for message in messages %}
        <div class="flash flash-{{  label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}

{%  endblock body %}

<footer class="footer_base">
    <div style="text-align: center">&copy; {{ "now"|date('h:i:s-d/m/Y') }} Sortir.com!<br>
    Symfony Project by Samira, Lisa and Antoine, realise with PHPStrom, PHPMYAdmin and some bundle <br>
    Copyright &copy; Sorir.com 2021, All Right Reserved</div>
</footer>

</body>
</html>
