{% extends 'base.html.twig' %}


{% block title %}Données personnelles de {{ app.user.prenom }} {{ app.user.nom }}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('message') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 success">{{message}}</div>
            </div>
        {% endfor %}
        <div class="col-xs4">
            <h1>Données personnelles de {{ app.user.prenom }} {{ app.user.nom }}</h1>
        </div>
        <label class="col-xs1">Nom :</label>
        <input class="col-xs3" value="{{ app.user.nom }}">
        <label class="col-xs1">Prénom :</label>
        <input class="col-xs3" value="{{ app.user.prenom }}">
        <div>
        <label class="col-xs1">Email :</label>
        <input class="col-xs3" value="{{ app.user.mail }}">
        <label class="col-xs1">Numéro :</label>
        <input class="col-xs3" value="{{ app.user.telephone }}">
        </div>
        <div class="col-xs4">
            <a href="#" class="btn btn-success">Modifier le profil</a>
            <a href="#" class="btn btn-danger">Supprimer le profil</a>
        </div>

       {#  <div class="col-xs4">
