{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="container row">
    <div class="ce_connecter">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
            <label for="inputPseudo">Pseudo</label>
            <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>

            <button class="btn btn-lg btn-success" type="submit"><span>
                    Connexion</span>
            </button>
            <div>
                <a href="{{ path('app_forgot_password_request') }}" title="reset_password">Mot de passe oublié ?</a>
            </div>
            <br>
            <br>
        </form>
    </div>
    <div class="lien_inscription">
        <h2>Vous n'êtes pas inscrit ? Faite le dès maintenant</h2>
        <button><span><a href="{{ path('app_register') }}" title="Create account">Register</a></span></button>
    </div>
    </section>
{% endblock %}
