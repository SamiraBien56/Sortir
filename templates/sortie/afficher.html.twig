{% extends 'base.html.twig' %}

{% block title %} {{sortie.nom }} {% endblock %}

{% block body %}
<div class="grix xs4 container">
    {% for message in app.flashes('message') %}
        <div class="col-xs4">
            <div class="p-3 my-2 rounded-2 success">{{message}}</div>
        </div>
    {% endfor %}
    <div class="col-xs4">
        <h1>Sortie: {{ sortie.nom }} </h1>
        <hr>
    </div>
    <div class="row">
        <div class="col-12 col-lg-5">
            <div> Nom de la sortie : {{ sortie.nom }}</div>
            <div> Date et heure de la sortie : {{ sortie.dateHeureDebut|date("Y-m-d") }}</div>
            <div> Date limite d'inscription : {{ sortie.dateLimiteInscription|date("Y-m-d")  }}</div>
            <div> Nombre de places : {{ sortie.nbInsriptionsMax }}</div>
            <div> Dur√©e : {{ sortie.duree|date("Y-m-d")  }}</div>
            <div> Description et infos : {{ sortie.infosSortie }}</div>
        </div>
        <hr>
        <div class="col-12 col-lg-5">
            <div> Campus : {{ sortie.campus.nom }}</div>
            <div> Lieu : {{ sortie.lieu.nom }}</div>
            <div> Rue : {{ sortie.lieu.rue }}</div>
            <div> Code Postal : {{ sortie.ville.codePostal }}</div>
            <div> Latitude: {{ sortie.lieu.latitude }}</div>
            <div> Longitude: {{ sortie.lieu.longitude }}</div>
        </div>
    </div>
    <div>
        <hr>
        <label class="col-xs1">Liste des participant inscrits:</label>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>
            </tr>
            </thead>
        <tbody>
 {% if listAllParticipants.participants != null %}
        {% for participant in listAllParticipants.participants%}
            <tr>
                <td><a href="{{ path('profil_detail',{'id': participant.id})}}" title="Afficher le profil ">{{ participant.pseudo}}</td>
                <td>{{ participant.nom}}</td>
            </tr>
        {% endfor %}
{% endif %}
        </tbody>
        </table>



    </div>



{% endblock %}